{
  "name": "SphGUI",
  "version": "1.0.0",
  "main": "./main/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./script/start.js",
    "dev": "electron .",
    "render": "cd ./render; npm start",
    "pack": "electron-builder --x64 -l"
  },
  "dependencies": {
    "env": "^0.0.2",
    "fs-extra": "^6.0.1",
    "fs-jetpack": "^1.3.0"
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.5.1"
  },
  "build": {
    "appId": "com.electron.dualsphgui",
    "productName": "SphGUI",
    "directories": {
      "output": "./dist",
      "app": "./",
      "buildResources": "build"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons"
    },
    "appImage": {
      "synopsis": "GUI for DualSPH",
      "category": "Science"
    },
    "files": [
      "!render/node_modules",
      "!render/public",
      "!render/src",
      "!render/.env",
      "!render/.eslintrc",
      "!render/.yarn.lock",
      "!script/*"
    ],
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/",
      "verifyChecksum": true
    },
    "asar": true,
    "compression": "store"
  }
}
